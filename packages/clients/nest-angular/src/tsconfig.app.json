{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../out-tsc/app",
    "baseUrl": "./",
    "module": "es2015",
    "types": [],
    "paths": {
      "@shared": ["app/shared"],
      "@shared/*": ["app/shared/*"],
      "@services": ["app/services"],
      "@services/*": ["app/services/*"],
      "@core": ["app/core/"],
      "@core/*": ["app/core/*"],
      "@testing": ["testing/"],
      "@testing/*": ["testing/*"],
      "@env": ["environments/"],
      "@env/*": ["environments/*"]
    }
  },
  "exclude": [
    "test.ts",
    "**/*.spec.ts"
  ]
}
